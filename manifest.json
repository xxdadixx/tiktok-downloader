{
  "manifest_version": 3,
  "name": "TikTok Auto Saver Button",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "downloads"],
  "host_permissions": [
    "*://savetik.co/*",
    "*://dl.snapcdn.app/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tiktok-downloader@example.com",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.tiktok.com/*", "*://tiktok.com/*"],
      "js": ["content.js"],
      "css": ["button.css"]
    },
    {
      "matches": ["*://savetik.co/*"],
      "js": [
        "savetik-detector.js",
        "savetik-fill.js",
        "savetik-auto-download.js"
      ]
    }
  ]
}